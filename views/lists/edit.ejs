<% layout("/layouts/boilerplate.ejs") %>


    
   
<div class="row mt-3">
        <div class="col">
             <h2>Edit your stay</h2>
             <form action="/lists/<%= data._id%>?_method=put" class="needs-validation" novalidate method="post" enctype="multipart/form-data">
        
        
                <div class="mb-3 col">
                    <label for="title" class="form-label"> <b> Title </b></label>
                    <input class="form-control" value="<%= data.title%>" name="data[title]" type="text" placeholder="enter title" >
                    <div class="invalid-feedback">Please provide a cathchy Title.</div>
                </div> 
        
                <div class="mb-3 col">
                    <label for="discription" class="form-label"> <b> Discription </b></label>
                    <textarea class="form-control" cols="30" rows="2"  name="data[description]" id="texta" ><%= data.description%></textarea>
                </div>
        
                <div class="mb-3 col">
                    <label for="image" class="form-label"> <b> Upload New Image</b></label>
                    <input class="form-control" cols="30" type="file" rows="3"  name="data[image]" >
                </div>
        
                <div class="mb-3 col">
                    <label for="price" class="form-label"> <b> Price </b></label>
                    <input class="form-control" value="<%= data.price%>" type="number" placeholder="enter price" name="data[price]">
                    <div class="invalid-feedback">Price should be valid.</div>
                </div>
        
                <div class="mb-3 col">
                    <label for="location" class="form-label"> <b> Location </b></label>
                    <input class="form-control" value="<%= data.location%>" type="text" name="data[location]" placeholder="enter location">
                    <div class="invalid-feedback">Please provide a valid location.</div>
                </div>
        
                <div class="mb-3 col">
                    <label for="Country" class="form-label"> <b> Country </b></label>
                    <input class="form-control" value="<%= data.country%>" type="text" name="data[country]" placeholder="enter country">
                    <div class="invalid-feedback">Please provide a valid country.</div>
                </div>
                <button class="btn mb-2" style="background-color: #fe424d; color: white;" >Edit</button>
            </form>
        </div>
        <div class="col-3">
            
        </div>     
</div>
    
<script>
    (() => {
    'use strict'
  
    // Fetch all the forms we want to apply custom Bootstrap validation styles to
    const forms = document.querySelectorAll('.needs-validation')
  
    // Loop over them and prevent submission
    Array.from(forms).forEach(form => {
      form.addEventListener(
        "submit",
        event => {
        if (!form.checkValidity()) {
          event.preventDefault()
          event.stopPropagation()
        }
  
        form.classList.add('was-validated')
      }, 
      false
    );
    })
  })()
</script>
     


